{
    "name": "burtds/cash-converter",
    "description": "A simple cash converter package for Laravel.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Burtds\\CashConverter\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Bert De Swaef",
            "email": "bert@bert.gent"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "spatie/laravel-package-tools": "^1.16"
    },
    "extra": {
        "laravel": {
          "providers": [
            "Burtds\\CashConverter\\CashConverterServiceProvider"
          ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "format": "vendor/bin/pint"
    },
    "require-dev": {
        "pestphp/pest": "^1.0|^2.0|^3.0",
        "orchestra/testbench": "^8.13|^9.0|^10.0",
        "spatie/laravel-ray": "^1.33",
        "laravel/pint": "^1.13"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
